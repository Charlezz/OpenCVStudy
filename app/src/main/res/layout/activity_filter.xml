<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.charlezz.opencvstudy.ui.filter.FilterViewModel"/>
    </data>

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.filter.FilterActivity">
        <android.support.constraint.ConstraintLayout
            android:id="@+id/control"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/source">
            <TextView
                android:text=""
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </android.support.constraint.ConstraintLayout>
        <ImageView
            android:id="@+id/source"
            android:layout_width="0dp"
            android:layout_margin="10dp"
            app:imageUri="@{viewModel.imageUri}"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/bg_rounded_corner"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/control"
            app:layout_constraintBottom_toTopOf="@+id/result"
            android:layout_height="0dp" />
        <ImageView
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/source"
            app:layout_constraintBottom_toBottomOf="@+id/source"
            app:layout_constraintStart_toStartOf="@+id/source"
            app:layout_constraintEnd_toEndOf="@+id/source"
            android:visibility="@{viewModel.addBtnVisibility}"
            android:onClick="@{v->viewModel.loadImage()}"
            android:tint="@color/colorPrimary"
            android:padding="10dp"
            android:src="@drawable/ic_add_circle_outline_48px"
            android:layout_height="wrap_content" />

        <ImageView
            app:layout_constraintTop_toBottomOf="@+id/source"
            android:id="@+id/result"
            android:layout_width="0dp"
            android:layout_margin="10dp"
            app:imageBmp="@{viewModel.convertedImage}"
            android:background="@drawable/bg_rounded_corner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="0dp" />

        <TextView android:layout_width="wrap_content"
            android:text="No result"
            app:layout_constraintStart_toStartOf="@id/result"
            app:layout_constraintBottom_toBottomOf="@id/result"
            app:layout_constraintEnd_toEndOf="@id/result"
            app:layout_constraintTop_toTopOf="@id/result"
            android:layout_height="wrap_content"/>
    </android.support.constraint.ConstraintLayout>

</layout>
